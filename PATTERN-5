// enter an number: 5
// *         
// * *       
// * * *     
// * * * *   
// * * * * * 

#include <stdio.h>
int main()
{
    int n;
    printf("enter an number: ");
    scanf("%d",&n);
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
            if(i==n-1||j==0||i==j||i>j) {
                printf("* ");
            }
            else
            {
                printf("  ");
            }
        }
        printf("\n");
    }
    return 0;
}
