#include <stdio.h>
int main()
{
char name[20];
int l;
scanf("%[^\n]s",name);
for(int i=0;name[i]!='\0';i++)
{
    l++;
}
printf("%d\n",l);
for(int i=0;name[i]!='\0';i++)
{
    if(name[i]>='A'&&name[i]<='Z')
    {
    // printf("%c",name[i]+32)
    name[i]=name[i]+32;
    printf("%c",name[i]);
    }
     else if(name[i]>='a' && name[i]<='z')
      printf("%c",name[i]);
      if(name[l]>='a'&&name[l]<='z')
      {
          name[l]=name[l]-32;
      }
       printf("%c",name[i]);
}
}
