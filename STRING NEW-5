// Write a c program to convert all vowels into capital and remaining all small
#include <stdio.h>
void capital(char *name)
{
    for(int i=0;name[i]!='\0';i++)
    {
        if(name[i]=='a'||name[i]=='e'||name[i]=='o'||name[i]=='u')
        {
            name[i]=name[i]-32;
        }
         else
        {
          if(name[i]>='a'&&name[i]<='z')
          {
              name[i]=name[i]+0;
          }
          else if(name[i]!=32)
          {
              name[i]=name[i]+32; 
          }
    }
    // printf("%s\t\n",name);
}
 printf("%s\t\n",name);
}
int main()
{
char name[100]="B r sanjeevadharsh";
capital(name);
}


// output of the code
// b r sAnjEEvAdhArsh	


// === Code Execution Successful ===
